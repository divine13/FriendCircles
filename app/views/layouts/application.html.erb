<!DOCTYPE html>
<html>
<head>
  <title>SocialThingamajig</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if logged_in? %>
		Logged in as: <%= current_user.username %>
		<%= button_to "Log Out", log_out_url, method: :delete %>
	<% else %>
		Log in: <%= link_to "Log In", log_in_url %>
		Sign Up: <%= link_to "Sign Up", new_user_url %>
	<% end %>

<%= yield %>

</body>
</html>
