<h1>Create a Friend Circle </h1>

<form action="<%= friend_circles_url %>" method="post">
	<input type="hidden" name="authenticity_token"
		value="<%= form_authenticity_token %>">
		<input type="hidden" name="friend_circle[creator_id]" value="<%= 				current_user.id %>">

		<label for="name">Friend Circle Name:</label>
		<input type="text" name="friend_circle[category_name]" id="name"><br>
		<%@users.each do |friend|%>

		<label 				for="friendships_attributes_<%=friend.id%>"><%=friend.username%></label>
		<input type="checkbox" 				name="friend_circle[friendships_attributes][<%=friend.id%>][friend_id]" 			 id="friendships_attributes_<%= friend.id%>" value="<%=friend.id%>">
	<br>
	<%end%>

	<input type="hidden" name="friend_circle[friend_ids]" value="">

	<br>
	<input type="submit" value="Create Friend Circle">
</form>